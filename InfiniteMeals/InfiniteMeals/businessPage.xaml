    <StackLayout x:Name="Main_Layout" Spacing="0">
        <BoxView HeightRequest="1" BackgroundColor="Black"/>
        <FlexLayout JustifyContent="SpaceBetween" Padding="15">
            <StackLayout Spacing="0">
                <ImageButton Source="Orange.png" Clicked="Change_Color" StyleClass="imgbtn">
                    <ImageButton.Effects>
                        <infinitemeals:TintImageEffect TintColor="White"/>
                    </ImageButton.Effects>
                </ImageButton>
                <Label Text="Fruits" StyleClass="white, center"/>
            </StackLayout>
            <StackLayout Spacing="0">
                <ImageButton Source="Carrot.png" Clicked="Change_Color" StyleClass="imgbtn">
                    <ImageButton.Effects>
                        <infinitemeals:TintImageEffect TintColor="White"/>
                    </ImageButton.Effects>
                </ImageButton>
                <Label Text="Vegetables" StyleClass="white, center"/>
            </StackLayout>
            <StackLayout Spacing="0">
                <ImageButton Source="Doughnut.png" Clicked="Change_Color" StyleClass="imgbtn">
                    <ImageButton.Effects>
                        <infinitemeals:TintImageEffect TintColor="White"/>
                    </ImageButton.Effects>
                </ImageButton>
                <Label Text="Desserts" StyleClass="white, center"/>
            </StackLayout>
            <StackLayout Spacing="0">
                <ImageButton Source="Toast.png" Clicked="Change_Color" StyleClass="imgbtn">
                    <ImageButton.Effects>
                        <infinitemeals:TintImageEffect TintColor="White"/>
                    </ImageButton.Effects>
                </ImageButton>
                <Label Text="Other" StyleClass="white, center"/>
            </StackLayout>
        </FlexLayout>
        <ScrollView VerticalOptions="FillAndExpand" BackgroundColor="White">
            <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround">
                <CollectionView x:Name="delivery_list">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="2"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="10">
                                <StackLayout Spacing="0">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Open_Farm"/>
                                    </StackLayout.GestureRecognizers>
                                    <Frame BackgroundColor="#136D74">
                                        <Label Text="{Binding delivery_dayofweek}" StyleClass="h3, white, center"/>
                                    </Frame>
                                    <Frame BackgroundColor="LightGray">
                                        <Label Text="{Binding delivery_date}" StyleClass="h2, secondary, center" Margin="0, 10"/>
                                    </Frame>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>
        </ScrollView>
        <BoxView HeightRequest="1" BackgroundColor="Gray"/>
    </StackLayout>

