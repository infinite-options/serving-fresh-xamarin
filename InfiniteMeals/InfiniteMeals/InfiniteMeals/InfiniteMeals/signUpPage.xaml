<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    x:Class="InfiniteMeals.signUpPage"
    Title="Sign up">
        <!--xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
                    <maps:Map
                    x:Name="map"
                    IsVisible="true">
                </maps:Map>-->
    <ContentPage.Content>
        <StackLayout Padding="0,0,0,0">
            <Label
                HeightRequest="136"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Text="Sign Up"
                TextColor="White"
                FontSize="34"
                FontAttributes="Bold"
                BackgroundColor="#136D74">

            </Label>
            <ScrollView>
                <StackLayout>
                    <StackLayout
                        Margin="10,10,10,0">
                        <Entry
                            x:Name="userEmailAddress"
                            Placeholder="Email Address">
                        </Entry>
                        <Entry
                            x:Name="userConfirmEmailAddress"
                            Placeholder="Confirm Email Address"></Entry>
                        <Entry
                            x:Name="userPassword"
                            Placeholder="Enter Password">
                        </Entry>
                        <Entry
                            x:Name="userConfirmPassword"
                            Placeholder="Confirm Password">
                        </Entry>
                        <Grid>
                            <Entry Placeholder="Push Notification" IsReadOnly="True"></Entry>
                            <Switch HorizontalOptions="End" Grid.Column="1" IsToggled="True"></Switch>
                        </Grid>
                        <Entry
                            x:Name="userFirstName"
                            Placeholder="First name">
                        </Entry>
                        <Entry
                            x:Name="userLastName"
                            Placeholder="Last name">
                        </Entry>
                        <Entry
                            x:Name="userPhoneNumber"
                            Placeholder="Phone number">
                        </Entry>
                        <Entry
                            x:Name="usertAddress"
                            Placeholder="Street Address">
                        </Entry>
                        <Entry
                            x:Name="userUnitNumber"
                            Placeholder="Apt number">
                        </Entry>
                        <Grid>
                            <Entry
                                x:Name="userCity"
                                Grid.Column="0"
                                Placeholder="City">
                            </Entry>
                            <Entry
                                x:Name="userState"
                                Grid.Column="1"
                                Placeholder="State">
                            </Entry>
                            <Entry
                                x:Name="userZipcode"
                                Grid.Column="2"
                                Placeholder="Zipcode">
                            </Entry>
                        </Grid>
                        <Frame HasShadow="False" BackgroundColor="Gray" Padding="0" HeightRequest="200">
                            <maps:Map
                                x:Name="map"
                                IsVisible="true">
                            </maps:Map>
                        </Frame>
                        <Button
                            Text="Sign up"
                            TextColor="White"
                            CornerRadius="5"
                            BorderColor="LightGray"
                            BorderWidth="1"
                            HeightRequest="40"
                            BackgroundColor="#FF8500"
                            Clicked="SignUpNewUser">
                        </Button>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
            <!--<StackLayout BackgroundColor="WhiteSmoke">
